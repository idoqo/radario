<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <LinearLayout
        android:id="@+id/indent"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="end"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/indent_bar"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/comment_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/comment_metadata"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/show_comment_indicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:tint="@color/lime" />

                    <TextView
                        android:id="@+id/comment_poster"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:text="@string/bull_separator" />

                    <TextView
                        android:id="@+id/comment_posted_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:text="@string/dummy_excerpt"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/action_like_comment"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_like"
                    android:tint="@android:color/darker_gray"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/number_of_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/action_like_comment" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/action_reply_comment"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_reply_white"
                    android:tint="@android:color/darker_gray"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>