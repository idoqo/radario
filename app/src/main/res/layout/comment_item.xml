<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="24dp">
    <LinearLayout
        android:id="@+id/indent"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:gravity="end">
        <LinearLayout
            android:id="@+id/indent_bar"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/comment_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/comment_metadata"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:id="@+id/show_comment_indicator"
                    android:src="@drawable/ic_arrow_down"
                    android:tint="@color/lime" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_poster"
                    android:lineSpacingMultiplier="1.1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bull_separator"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"/>
                <TextView
                    android:id="@+id/comment_posted_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/comment_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:autoLink="web"
            android:text="@string/dummy_excerpt"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">
                <ImageView
                    android:id="@+id/action_like_comment"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_like"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_of_likes"
                    android:layout_marginStart="8dp"
                    android:textSize="10sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">
                <ImageView
                    android:id="@+id/action_reply_comment"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_reply_white"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_of_replies"
                    android:layout_marginStart="8dp"
                    android:textSize="10sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">
                <ImageView
                    android:id="@+id/action_like_topic"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_bookmark_border_white_24dp"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/action_bookmark_comment"
                    android:layout_marginStart="8dp"
                    android:textSize="10sp"
                    android:text="@string/action_bookmark_topic"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>