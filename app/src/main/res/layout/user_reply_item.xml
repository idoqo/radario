<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent_topic_title"
        android:text="@string/dummy_title"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reply_excerpt"
        android:text="@string/dummy_excerpt" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="gravity">
            <ImageView
                android:id="@+id/action_like_topic"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_like"
                android:tint="@android:color/darker_gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_of_likes"
                android:text="56 likes"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="gravity">
            <ImageView
                android:id="@+id/action_view_context"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_comment"
                android:tint="@android:color/darker_gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_context"
                android:text="@string/view_context"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="10sp"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>