<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parent_topic_title"
        android:text="@string/dummy_title"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reply_excerpt"
        android:text="@string/dummy_excerpt" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="start">
            <ImageView
                android:id="@+id/action_like_topic"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_like"
                android:tint="@android:color/darker_gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_of_likes"
                android:text="56 likes"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="end">
            <ImageView
                android:id="@+id/action_view_context"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_comment"
                android:tint="@android:color/darker_gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/view_context"
                android:text="@string/view_context"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textSize="10sp"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>