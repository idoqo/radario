<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/circular_profile_image"
        android:contentDescription="@string/app_name"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@drawable/fox"
        android:layout_marginStart="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logged_username"
        android:layout_marginStart="14sp"
        android:text="Okoko Michaels"
        android:textSize="14sp"
        android:gravity="start"
        android:textStyle="bold"
        android:layout_toEndOf="@id/circular_profile_image"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rank"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textStyle="normal"
        android:text="Administrator"
        android:layout_below="@id/logged_username"
        android:layout_alignStart="@id/logged_username"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>